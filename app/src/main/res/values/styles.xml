<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/tabsScrollColor</item>
    </style>


    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/nightFontColor</item>
        <item name="android:textColor">@color/nightBackgroundFontLight</item>
        <item name="singleAccount">true</item>
        <item name="drawerType">@integer/DRAWERTYPE_ACCOUNTS</item>
        <item name="learningPattern">false</item>
        <item name="sectionStyle">@style/MySectionTheme</item>
        <item name="windowActionModeOverlay">true</item>

    </style>


    <style name="MySectionTheme" >
        <item name="sectionColorIcon">#fafafa</item>
        <item name="sectionColorText">#fafafa</item>
        <item name="sectionColorNotification">#fafafa</item>

        <item name="sectionBackgroundColorPressed">#bdbdbd</item>
        <item name="sectionBackgroundColorSelected">#D9546e7a</item>
        <item name="sectionBackgroundColor">#000000FF</item>
    </style>

    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="actionMenuTextColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_material_dark</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
